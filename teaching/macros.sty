% -------------------------------------- PAGES --------------------------------------
% -----------------------------------------------------------------------------------

\newcounter{iterator}

% -----------------------------------------------------------------------------------

% \Whitepage[# of pages]
\providecommand{\Whitepage}[1][1]{%
  \forloop{iterator}{0}{\value{iterator} < #1}{%
    \newpage \thispagestyle{empty} \null%
  }
  
  \newpage%
}

% -----------------------------------------------------------------------------------

% \Blankpage[# of pages]
\providecommand{\Blankpage}[1][1]{%
  \forloop{iterator}{0}{\value{iterator} < #1}{%
    \newpage \null%
  }
  
  \newpage%
}

