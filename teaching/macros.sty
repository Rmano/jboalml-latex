% \IncludeCode{Language}{Path}
\providecommand{\IncludeCode}[2]{#1 \lstinputlisting{#2}}

% ----------------------------------------------------------------------------------- 

% \IncludeBoxedCode[Position]{Width}{Language}{Path}{Caption}{cod:Label}
\providecommand{\IncludeBoxedCode}[6][h]{
